<div class="container">
  <%=render 'layouts/list',user: @user, post:Post.new%>
  <div class="mt-4">
    <h2>投稿一覧</h2>
    <table class="table table-striped table-hover"> 
      <thead>
        <tr>
          <th></th>
          <th>題名</th>
          <th>内容</th>
          <th confirm="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post|%>
        <tr>
          <td>
            <%=link_to (post.user) do%>
            <%=image_tag post.user.get_profile_image(50,50)%>
            <%end%>
          </td>
          <td><%=post.title%></td>
          <td><%=post.content%></td>
        </tr>
        <%end%>
      </tbody>
    </table>

  <div class="mb-3">
<%=link_to 'プロフィール編集',edit_user_path(@user),class: 'btn btn-primary me-2'%>
<%=link_to '退会する',user_path(@user),method: :delete, data: {confirm: '本当に退会しますか？'},class: 'btn btn-danger'%>
  </div>
  </div>
</div>
























