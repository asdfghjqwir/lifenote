<div class="container">
<% if @user.errors.any? %>
<div class="alert alert-danger">
  <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <%=render 'layouts/list',user: current_user, post: Post.new%>
  <div class="mb-4">
    <h2>ユーザーの一覧</h2>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user|%>
        <tr>
          <td><%=image_tag user.get_profile_image(50,50)%></td>
          <td><%=user.name%></td>
          <td><%=link_to '詳細へ',user_path(user),class: 'btn btn-sm btn-secondary'%></td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>