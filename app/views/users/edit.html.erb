<div class="container">
  <h2>プロフィール</h2>
  
   <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

<%=form_with model: @user,local: true do |f|%>
<div class="mb-3">
  <%=f.label :name,"氏名",class: 'form-label'%>
  <%=f.text_field :name,class: 'form-control' %>
</div>
<div class="mb-3">
  <%=f.label :profile_image,"紹介画像",class:'form-label'%>
  <%=f.file_field :profile_image,class: 'form-control'%>
</div>
<div class="mb-3">
  <%= f.label :introduction,"説明文",class:'form-label' %>
  <%= f.text_area :introduction,class:'form-control'%>
</div>
<div class="mb-3">
  <%=f.submit "更新",class: 'btn btn-primary me-2' %>
  <%=link_to '戻る',user_path(@user),class: 'btn btn-secondary'%>
</div>
<%end%>
</div>



















