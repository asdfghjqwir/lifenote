<h2>私の紹介</h2>
<%=image_tag user.get_profile_image(100,100)%>
<table>
 <tbody>
  <tr>
    <th>名前</th>
    <th><%=user.name%></th>
  </tr>
  <tr>
    <th>説明文</th>
  <th><%=user.introduction%></th>
 </tr>
 </tbody>
</table>

<h2>新規投稿</h2>
<%=form_with model: post,local: true do |f|%>
<div class="form-group">
 <%=f.label :title,"題名"%>
 <%=f.text_field :title%>
</div>
<div class="form-group">
  <%=f.label :content,"内容"%>
  <%=f.text_area :content%>
</div>
<div class="form-group">
  <%=f.submit '投稿'%>
</div>
<%end%>