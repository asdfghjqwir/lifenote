<div class="container">
  <% if @post.errors.any?%>
  <div class="alert alert-danger">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
       <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <%end%>
  
  <%=render 'layouts/list',user: current_user, post: Post.new%>
  
  <div class="mb-4">
    <h2>みんなの投稿</h2>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post|%>
        <tr>
          <td><%=image_tag post.user.get_profile_image(50,50)%> </td>
          <td><%=post.title%></td>
          <td><%=post.content%></td>
          <td><%=link_to '詳細へ',post_path(post),class: 'btn btn-sm btn-secondary'%></td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </div>
  </div>
  
  
  
  
  
  
  
  

  