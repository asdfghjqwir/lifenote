<div class="container">
  
  <% if @post.errors.any?%>
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
       <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <%end%>
  
  <%=render 'layouts/list',user: current_user, post: Post.new%>
  
  <div>
    <h2>投稿</h2>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>題名</th>
          <th>内容</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post|%>
        <tr>
          <td>
            <%=link_to user_path(post.user) do%>
            <%=image_tag post.user.get_profile_image(50,50)%>
            <%end%>
          </td>
          <td><%=link_to post.title, post_path(post)%></td>
          <td><%=post.content%></td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </div>
  </div>
  
  
  
  
  
  
  
  

  