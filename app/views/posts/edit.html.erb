<div class="container">
  <h1>投稿編集</h1>
  
      <% if @post.errors.any?%>
      <div class="alert alert-danger">
         <%= pluralize(@Post.errors.count, "error") %> prohibited this book from being saved:
         <ul>
            <% @post.errors.full_messages.each do |message| %>
            <li><%=message%></li>
            <%end%>
         </ul>
      </div>
      <%end%>
  
  <%=form_with model:@post,local: true  do |f|%>
  <div class="form-group">
    <%=f.label :title, "題名"%>
    <%=f.text_field :title%>
  </div>
  
  <div class="form-group">
    <%=f.label :content,"内容"%>
    <%=f.text_area :content%>
  </div>
  
  <div class="form-group">
    <%=f.submit "更新"%>
  </div>
  <%end%>
  
  <%=link_to '詳細へ',@post%>
  <%=link_to '戻る',posts_path%>
</div>


















  
  