<div class="container">
  <h1>投稿編集</h1>
  
      <% if @post.errors.any?%>
      <div class="alert alert-danger">
         <%= pluralize(@post.errors.count, "error") %> prohibited this book from being saved:
         <ul>
            <% @post.errors.full_messages.each do |message| %>
            <li><%=message%></li>
            <%end%>
         </ul>
      </div>
      <%end%>
  
  <%=form_with model:@post,local: true  do |f|%>
  <div class="mb-3">
    <%=f.label :title, "タイトル",class: 'form-label'%>
    <%=f.text_field :title, class: 'form-control'%>
  </div>
  
  <div class="mb-3">
    <%=f.label :content,"内容",class: 'form-label'%>
    <%=f.text_area :content,class: 'form-control'%>
  </div>
  
  <div class="mb-3">
    <%=f.submit "更新",class: 'btn btn-primary'%>
      <%=link_to '詳細へ',post_path(@post),class: 'btn btn-secondary'%>
  <%=link_to '戻る',posts_path,class: 'btn btn-secondary'%>
  </div>
  <%end%>
</div>


















  
  